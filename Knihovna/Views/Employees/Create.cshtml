@using Knihovna.DTO
@model EmployeeDto
<div>
	<h4>Vložit nového zaměstnance</h4>
	<form method="post" asp-action="Create">

		<div class="form-group">
			<label asp-for="FirstName">Jméno</label>
			<input type="text" asp-for="FirstName" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="LastName">Příjmení</label>
			<input type="text" asp-for="LastName" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="DateOfBirth">Datum narození</label>
			<input type="date" asp-for="DateOfBirth" class="form-control" />
		</div>
 
		<input type="submit" class="btn btn-success" value="Vložit" />
	</form>
</div>
