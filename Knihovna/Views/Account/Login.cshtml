@using Knihovna.ViewModels;
@model LoginVM
@{
	ViewData["Title"] = "Login";
}
<div class="form-group p-3" style="background-color: lightcyan;">
	<h4 class="text-center">Přihlášení</h4>
	<div class="text-danger" asp-validation-summary="All"></div>

	<form asp-action="Login" method="post">
		<input type="hidden" asp-for="ReturnUrl" />
		<div class="form-group">
			<label asp-for="UserName" class="form-label">Login</label>
			<input asp-for="UserName" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Password" class="form-label">Heslo</label>
			<input type="password" asp-for="Password" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="RememberMe">Zapamatuj si mě</label>
			<input type="checkbox" asp-for="RememberMe" />
		</div>
		<div class="form-group">
			<button class="btn btn-primary w-100 mt-2"  type="submit">Přihlásit</button>
			<a class="btn btn-success w-100 mt-2" asp-area="" asp-controller="Users" asp-action="Create">Zaregistrovat se</a>
		</div>
	</form>
</div>

