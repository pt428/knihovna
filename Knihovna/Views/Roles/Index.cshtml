@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}
<div class="form-group p-3" style="background-color: lightcyan;">
    <h3 class="text-center">Seznam rolí</h3>
    <a asp-action="Create" class="btn btn-success w-100">Vytvořit novou roli</a>

    <table class="table table-secondary table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
        <th>ID</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Update</a>
            </td>
            <td>
                @if(role.Name!="Admin" && role.Name!="Čtenář" && role.Name != "Knihovník")
                {                    
                <form asp-action="Delete" asp-route-id="@role.Id"
                      method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
                }
            </td>
            <td>@role.Id</td>
        </tr>
    }
</table> 