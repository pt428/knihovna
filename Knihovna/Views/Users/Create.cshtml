@using Knihovna.ViewModels
@model UserVM
@{
	ViewData["Title"] = "CREATE USER";
}
<div class="form-group p-3" style="background-color: lightcyan;">
	<h1 class="text-center">Registrace nového uživatele</h1>
 
	<div asp-validation-summary="All" class="text-danger"></div>

	<form method="post">
		<input asp-for="RoleNames" value="-" class="form-control" hidden />
		<input asp-for="AppUserId" value="0" class="form-control" hidden />
		<input asp-for="UserName" value="-" class="form-control" hidden / />
		<div class="form-group">
			<label asp-for="FirstName" class="form-label">Jméno</label>
			<input type="text" asp-for="FirstName" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="LastName" class="form-label">Příjmení</label>
			<input type="text" asp-for="LastName" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="DateOfBirth" class="form-label">Datum narození</label>
			<input type="date" asp-for="DateOfBirth" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="Email" class="form-label"></label>
			<input asp-for="Email" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="Password" class="form-label"></label>
			<input asp-for="Password" class="form-control" required />
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success w-100">Registrovat</button>
		</div>
	</form>
</div>